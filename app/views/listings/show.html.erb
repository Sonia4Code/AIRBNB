<%= link_to "Listings", listings_path %>
<%= link_to "New", new_listing_path %>
<%= link_to 'Back', :back %>



<div class="container">
<div class="row">
  <div class="col-6">  
    <h1><%= @listing.title %></h1>
    <%= render '/listings/display' %>
    <%= button_to "Reserve", new_listing_reservation_path(@listing.id), :method => "get" %>
    <%= button_to "Edit", edit_listing_path(@listing), :method => "get" %>
    <%= button_to "delete", @listing, :method => "delete" %>
  </div>
  <div class="col-6 ">
    <!-- CAROUSEL -->
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%=image_tag @listing.avatars[0].medium.url, :class => "d-block w-100" unless @listing.avatars.empty? %> 
    </div>
    <% i = 1 %>
    <% while i <= (@listing.avatars.length - 1) do  %> 
    <div class="carousel-item">
      <%=image_tag @listing.avatars[i].medium.url, :class => "d-block w-100" unless @listing.avatars.empty? %> 
    </div>
      <% i = i + 1 %> 
      <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
<!-- END CAROUSEL -->
  
</div>
</div>



