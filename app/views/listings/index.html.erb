<%= link_to "Listings", listings_path %>
<%= link_to "New", new_listing_path %>


<h1>Listings</h1>

<% form_tag listings_path, :method => 'get' do %>
    <%= text_field_tag :location %>
    <%= submit_tag "Search" %>
<% end %>
 
<table>
  <tr>
    <th>Location</th>
    <th>Type</th>
    <th>Price</th>
    <th></th>
    <th></th>
  </tr>
 
<% @listings.each do |listing| %>
  <tr>
    <td><%= listing.location %></td>
    <td><%= listing.property_type %></td>
    <td><%= listing.price %></td>
    <td><%= link_to "View", listing %></td>
    
  </tr>
<% end %>
</table>




